<header>
    <div class="container text-center">
        <div class="fh5co-navbar-brand">
            <a class="fh5co-logo" href="/">Education User Analysis</a>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-xs-4">
            <form class="form-horizontal">
                <div class="form-group">
                    <label id="form-title" class="col-sm-offset-3 col-sm-9">E-Learning</label>
                </div>

                <div class="form-group">
                    <label class="col-xs-3 control-label">学工号</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control" id="userId" name="userId" placeholder="请输入学工号">
                        <span class="msg text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">密码</label>
                    <div class="col-xs-9">
                        <input type="password" class="form-control" id="password" name="password" placeholder="请输入密码">
                        <span class="msg text-danger"></span>
                    </div>
                </div>

            </form>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button class="btn btn-primary" id="login-btn">登&nbsp;&nbsp;录</button>
                </div>
            </div>
        </div>
        <div class="col-xs-8">
            <div class="col-xs-9">
                <div class=" text-center section-title">
                    <!-- section title start-->
                    <div class="heading-section text-center">
                        <h2>学生活跃榜</h2>
                      {{#if rank}}
                          <table class="table table-striped text-left">
                              <caption>单门课程经验值榜</caption>
                              <thead>
                              <tr>
                                  <!--<th>学号</th>-->
                                  <th>姓名</th>
                                  <th>课程名</th>
                                  <th>经验值</th>
                              </tr>
                              </thead>
                              <tbody>
                              {{#with rank}}
                                {{#each single}}
                                    <tr>
                                        <!--<td>{{userId}}</td>-->
                                        <td>{{nickName}}</td>
                                        <td>{{courseName}}</td>
                                        <td>{{activity}}</td>
                                    </tr>
                                {{/each}}
                              {{/with}}
                              </tbody>
                          </table>
                          <table class="table table-striped text-left">
                              <caption>综合经验值榜</caption>
                              <thead>
                              <tr>
                                  <!--<th>学号</th>-->
                                  <th>姓名</th>
                                  <th>经验值</th>
                              </tr>
                              </thead>
                              <tbody>
                              {{#with rank}}
                                {{#each overall}}
                                    <tr>
                                        <!--<td>{{userId}}</td>-->
                                        <td>{{nickName}}</td>
                                        <td>{{experience}}</td>
                                    </tr>
                                {{/each}}
                              {{/with}}
                              </tbody>
                          </table>
                      {{/if}}
                    </div>
                </div>
                <!-- /.section title start-->
            </div>
            <div class="col-xs-3">
                <div class=" text-center section-title">
                    <!-- section title start-->
                    <div class="heading-section">
                        <h2>统计信息</h2>
                      {{#if summary}}
                          <table class="table table-striped text-left">
                              <caption>各项数据统计</caption>
                              <thead>
                              <tr>
                                  <th>名称</th>
                                  <th>数量</th>
                              </tr>
                              </thead>
                              <tbody>
                              {{#each summary}}
                                  <tr>
                                      <td>{{name}}</td>
                                      <td>{{count}}</td>
                                  </tr>
                              {{/each}}
                              </tbody>
                          </table>
                      {{/if}}
                    </div>

                </div>
                <!-- /.section title start-->
            </div>
        </div>


    </div>

</div>
