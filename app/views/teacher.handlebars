<header>
    <div class="container text-center">
        <div class="fh5co-navbar-brand">
            <a class="fh5co-logo" href="/">ECNU USER ANALYSIS</a>
        </div>

        <nav id="fh5co-main-nav" role="navigation">
            <ul>
                <li><a href="/" class="active">Home</a></li>
                <li><a href="/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>

            </ul>
        </nav>
    </div>
</header>

<div class="col-xs-12">
    <div class="col-xs-4 text-center">
        <img src="{{data.teacherInfo.faceIcon}}" style="max-width: 150px" class="padding-bottom-2">
        <h2>Hi {{data.teacherInfo.userName}}</h2>
        <h2>Teaching {{data.classCount}} Classes</h2>
    </div>

    <div class="col-xs-8">
        <div class="panel-group" id="accordion">
          {{#each data.data}}
              <div class="panel panel-default">
                  <div class="panel-heading">
                      <h4 class="panel-title">
                          <a data-toggle="collapse" class="class-detail" data-parent="#accordion" href="#{{classInfo.classId}}">
                            {{classInfo.classId}}: {{classInfo.Course.courseName}}
                          </a>
                      </h4>
                  </div>
                  <div id="{{classInfo.classId}}" class="panel-collapse collapse">
                      <div class="panel-body">
                      </div>
                  </div>
              </div>
          {{/each}}
        </div>

    </div>
</div>
